{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<a href="{{ path('app_logout') }}">Se déconnecter</a>
<div class="example-wrapper">
    <h1>Voici vos messages regroupés par email :</h1>
    {% for question in questions %}
        {% if question.statut == true %}
        <div style="background-color: limegreen">
        {% else %}
        <div style="background-color: orangered">
        {% endif %}
            <p>
                Nom du contact : {{ question.nom }} <br>
                Email : {{ question.email }} <br>
                Question : {{ question.question }}
            </p>
            <a href="{{ path('app_admin_statutChecked', {'id': question.id}) }}">
                {% if question.statut == true %}
                    Traité
                {% else %}
                    Non traité
                {% endif %}
            </a>
        </div>
    {% endfor %}
</div>
{% endblock %}
